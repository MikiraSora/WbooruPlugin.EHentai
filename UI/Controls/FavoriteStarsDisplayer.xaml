                                <Setter Property="Foreground" Value="{StaticResource HalfColorBrush}">
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Stars, Converter={StaticResource FavoriteStarsStatusConverter}, ConverterParameter=4}" Value="1">
