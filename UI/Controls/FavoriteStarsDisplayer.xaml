                            </DataTrigger>
                            <DataTrigger Binding="{Binding Stars, Converter={StaticResource FavoriteStarsStatusConverter}, ConverterParameter=1}" Value="0.5">
                                <Setter Property="Foreground" Value="{StaticResource HalfColorBrush}">
